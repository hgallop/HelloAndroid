<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/none"
        android:layout_weight="3"
        android:contentDescription="@string/access1"
        android:src="@drawable/udacityhead" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/volkhovregular"
        android:text="@string/udacity"
        android:textSize="@dimen/large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/none"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:autoLink="map"
        android:drawableLeft="@drawable/ic_loc"
        android:drawableStart="@drawable/ic_loc"
        android:gravity="center"
        android:text="@string/addressl"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/none"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:autoLink="phone"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableStart="@drawable/ic_phone"
        android:gravity="center"
        android:text="@string/phone"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/none"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:autoLink="web"
        android:drawableLeft="@drawable/ic_lang"
        android:drawableStart="@drawable/ic_lang"
        android:gravity="center"
        android:text="@string/url"
        android:textSize="@dimen/text" />

    <ImageView
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_gravity="center"
        android:contentDescription="@string/access2"
        android:paddingBottom="@dimen/pad"
        android:src="@drawable/udacitylogo" />

</LinearLayout>
